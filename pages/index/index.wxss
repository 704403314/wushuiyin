.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
  margin-top: -20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

form {
  display: flex;
  flex-direction: column;
  align-items: center;
}

input {
  width: 80%;
  height: 40px;
  margin-bottom: 20px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
}

button {
  width: 80%;
  height: 40px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}
.mini-btn{
    margin-right: 20rpx;
  }
.tips {
  margin-top: 20px;
  font-size: 14px;
  color: #999;
  margin-bottom: 20px;
}

.buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
  width: 80%;
}
.copy,
.download {
width: 48%;
height: 40px;
background-color: #007aff;
color: #fff;
border: none;
border-radius: 5px;
font-size: 14px;
display: flex;
align-items: center;
justify-content: center;
}
.copy {
background-color: #4cd964;
}
.download {
background-color: #ff2d55;
}
.wave {
position: relative;
width: 100%;
height: 100px;
overflow: hidden;
}
.wave-1 {
position: absolute;
bottom: 0;
left: 0;
width: 100%;
height: 100px;
animation: wave 2s linear infinite;
transform-origin: center bottom;
}
.wave-2 {
position: absolute;
bottom: 0;
left: 0;
width: 100%;
height: 100px;
animation: wave 3s linear infinite;
transform-origin: center bottom;
}

textarea {
    width: 700rpx;
    padding: 25rpx 0;
  }
  
  .textarea-wrp {
    /* padding: 0 25rpx; */
    background-color: #fff;
    min-height: 100px;
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 28px;
    border: 1px solid #a1a1a1;
    border-radius: 6px;
  }
  .text-style {
    text-align: left;
    text-indent:15px;
  }

  .page-section{
    width: 100%;
    margin-bottom: 60rpx;
  }
  
  .page-section:last-child{
    margin-bottom: 0;
  }
  
  .page-section-title{
    font-size: 36rpx;
    /* color: #bd5108; */
    color: rgb(24, 187, 9);
    margin-bottom: 10rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    line-height: 55rpx;
  }

  .tip {
    position: fixed;
    top: 1px;
    font-weight:bold;
    /* left: 60px; */
    /* background-color: #fff; */
    
    padding: 13px;
    font-size: 14px;
    /* color: rgb(216, 100, 6); */
    color: rgb(5, 189, 180);
  }


